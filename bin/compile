#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x
BUILD_DIR=$1

function topic() 
{
    echo "-----> $*"
}

PREFIX_DIR=${BUILD_DIR}/.apt/usr
DICT_DIR=${PREFIX_DIR}/share/aspell/
ASPELL_DIR=${PREFIX_DIR}/lib/aspell/
lang=en

echo BUILD_DIR ${BUILD_DIR}/.apt/usr
echo DICT_DIR ${PREFIX_DIR}/share/aspell/
echo ASPELL_DIR ${PREFIX_DIR}/lib/aspell/

topic "Remove old aspell symlink"
rm ${ASPELL_DIR}/*.rws

topic "Create aspell dictionnary"
for x in `ls -C1 ${DICT_DIR}/*.cwl.gz`; 
do 
    echo Doing $x 
    base=`basename $x .cwl.gz`; 
    zcat ${x} | precat | aspell --prefix=${HOME}/.apt/usr --local-data-dir=${ASPELL_DIR} --lang=${lang} create master ${base}.rws; 
done

# Setting environment variable
#export ENCHANT_PREFIX_DIR=${PREFIX_DIR}
#export ENCHANT_MODULE_PATH=${PREFIX_DIR}/lib/x86_64-linux-gnu/enchant/

topic "Symlink libenchant in .enchant"
mkdir ${BUILD_DIR}/.enchant
# ln -s ${PREFIX_DIR}/lib/x86_64-linux-gnu/enchant/libenchant_aspell.so ${HOME}/.enchant/libenchant_aspell.so
cp ${PREFIX_DIR}/lib/x86_64-linux-gnu/enchant/libenchant_aspell.so ${BUILD_DIR}/.enchant/libenchant_aspell.so
cp ${PREFIX_DIR}/lib/aspell/* ${BUILD_DIR}/.enchant/
cp ${HOME}/lib/aspell/* ${BUILD_DIR}/.enchant/
